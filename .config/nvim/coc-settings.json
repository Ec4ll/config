{
    "coc.preferences.formatOnSaveFiletypes": [
        "json",
        "vim",
        "python",
        "haskell"
    ],
    // BROKEN - for using snippets with Kite
    /* "languageserver": { */
    /*     "kite": { */
    /*         "command": "/home/ecal/.local/share/kite/kite-v2.20210114.0/kite-lsp --editor=nvim", */
    /*         "filetypes": ["python", "go", "javascript"] */
    /*     } */
